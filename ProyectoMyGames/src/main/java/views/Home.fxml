<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background" stylesheets="@Home.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeControlador">
