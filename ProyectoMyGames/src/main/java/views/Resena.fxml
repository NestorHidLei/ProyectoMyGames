<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" styleClass="background" stylesheets="@../styles/Juego.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.resena">
    
    <HBox alignment="CENTER" layoutY="410.0" spacing="20">
        
        <!-- Información del juego -->
        <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="20">
            <Label fx:id="nombreJuego" styleClass="juego-nombre" />
            <Label fx:id="ratingJuego" styleClass="juego-rating" />
            <Label fx:id="plataformas" maxWidth="400" styleClass="juego-detalle" wrapText="true" />
            <Label fx:id="generos" maxWidth="400" styleClass="juego-detalle" wrapText="true" />
            <Label fx:id="metacriticScore" styleClass="juego-detalle" />
            <TextArea fx:id="descripcionJuego" editable="false" maxWidth="600" styleClass="juego-descripcion" wrapText="true" />
        </VBox>
        
        <!-- Imagen del juego -->
        <ImageView fx:id="imagenJuego" fitHeight="302.0" fitWidth="600" preserveRatio="true" styleClass="juego-imagen" />
    </HBox>
    
    <!-- Carrusel de screenshots -->
    <VBox alignment="CENTER" layoutY="820.0" spacing="10">
        <Label styleClass="section-title" text="Screenshots" />
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="horizontal-scroll">
            <HBox fx:id="contenedorScreenshots" spacing="10" />
        </ScrollPane>
    </VBox>
    
    <!-- Botones de navegación -->
    <Button fx:id="inicio" layoutX="14.0" layoutY="211.0" mnemonicParsing="false" opacity="0.0" prefHeight="71.0" prefWidth="204.0" styleClass="inicio" />
    <Button fx:id="deseados" layoutX="438.0" layoutY="211.0" mnemonicParsing="false" opacity="0.0" prefHeight="71.0" prefWidth="317.0" styleClass="deseados" />
    <Button fx:id="biblioteca" layoutX="942.0" layoutY="211.0" mnemonicParsing="false" opacity="0.0" prefHeight="71.0" prefWidth="340.0" styleClass="biblioteca" />
    <Button fx:id="user" layoutX="1507.0" layoutY="211.0" mnemonicParsing="false" opacity="0.0" prefHeight="71.0" prefWidth="270.0" styleClass="user" />
    
    <!-- Área de texto y botones de acción -->
    <TextArea fx:id="texto" editable="true" layoutX="1384.0" layoutY="401.0" prefHeight="506.0" prefWidth="453.0" />
    <Button fx:id="modificar" layoutX="1384.0" layoutY="939.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="179.0" text="Modificar" />
    <Button fx:id="publicar" layoutX="1658.0" layoutY="939.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="179.0" text="Guardar" />
    
</AnchorPane>
